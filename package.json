{
  "name": "ffc-sfi-crown-hosting-prototype",
  "version": "1.3.0",
  "description": "Connectivity test between AKS and Crown Hosting",
  "homepage": "https://github.com/DEFRA/ffc-sfi-crown-hosting-prototype",
  "main": "app/index.js",
  "scripts": {
    "build": "webpack",
    "build:watch": "webpack --watch",
    "pretest": "npm run test:lint",
    "test": "jest --runInBand --forceExit",
    "test:watch": "jest --coverage=false --onlyChanged --watch --runInBand",
    "test:lint": "standard",
    "test:debug": "node --inspect-brk=0.0.0.0 ./node_modules/jest/bin/jest.js",
    "start:watch": "npm-run-all --parallel build:watch start:nodemon",
    "start:debug": "nodemon --inspect-brk=0.0.0.0 --ext css,js,njk --legacy-watch app/index.js",
    "start:nodemon": "nodemon --inspect=0.0.0.0 --ext css,js,njk --legacy-watch app/index.js"
  },
  "author": "Defra",
  "contributors": [
    "John Watson john.watson2@rpa.gov.uk"
  ],
  "license": "OGL-UK-3.0",
  "dependencies": {
    "@hapi/crumb": "^8.0.1",
    "@hapi/good": "^9.0.1",
    "@hapi/good-console": "^9.0.1",
    "@hapi/good-squeeze": "^6.0.0",
    "@hapi/hapi": "^20.2.1",
    "@hapi/inert": "^6.0.4",
    "@hapi/vision": "^6.1.0",
    "@hapi/wreck": "^17.1.0",
    "applicationinsights": "^2.1.8",
    "blipp": "^4.0.2",
    "govuk-frontend": "^3.14.0",
    "hyco-https": "^1.4.5",
    "hyco-ws": "1.0.5",
    "joi": "^17.4.2",
    "moment": "^2.29.1",
    "nunjucks": "^3.2.3"
  },
  "devDependencies": {
    "clean-webpack-plugin": "^4.0.0",
    "css-loader": "^6.4.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.3.2",
    "jest": "^27.2.5",
    "jest-junit": "^13.0.0",
    "mini-css-extract-plugin": "^2.4.2",
    "nodemon": "^2.0.13",
    "npm-run-all": "^4.1.5",
    "resolve-url-loader": "^4.0.0",
    "sass": "^1.43.2",
    "sass-loader": "^12.2.0",
    "standard": "^16.0.4",
    "style-loader": "^3.3.0",
    "webpack": "^5.58.2",
    "webpack-cli": "^4.9.0"
  },
  "standard": {
    "globals": [
      "describe",
      "beforeEach",
      "expect",
      "test",
      "afterEach",
      "jest",
      "beforeAll",
      "afterAll"
    ],
    "ignore": [
      "app/dist/**/*.js"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "**/test-output/**"
    ]
  }
}
